<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="70" Height="34.75" 
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        x:Class="TimeChecker.PercentShow"
        ShowInTaskbar="False"
        Topmost="True">
    <Window.Background>
        <SolidColorBrush Opacity="0.0" Color="White"/>
    </Window.Background>
    <Grid Margin="0,0,0,-8">

        <StackPanel Margin="3,5,3,10">
            <TextBlock x:Name="percentShow" x:FieldModifier="public" Foreground="#000000" Text="0.00%" FontSize="20" HorizontalAlignment="Right">
                <TextBlock.Effect>
                    <DropShadowEffect ShadowDepth="0" BlurRadius="4" Color="#FFFFFF" />
                </TextBlock.Effect>
            </TextBlock>

            <!-- With DropShadow -->

        </StackPanel>
    </Grid>
</Window>
